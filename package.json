{
  "name": "@smardex/pwnfork",
  "description": "PWN fork",
  "version": "0.0.1",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6"
  },
  "devDependencies": {
    "@prb/test": "^0.6.4",
    "forge-std": "github:foundry-rs/forge-std#v1.8.2",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2",
    "prettier-plugin-solidity": "^1.3.1",
    "multitoken": "github:PWNFinance/MultiToken#v3.0.1"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:write": "bun run prettier:check  && bun run prettier:write",
    "lint:sol": "bun run prettier:check:sol && bun solhint {script,src,test}/**/*.sol",
    "prettier:check": "bun run prettier:check:sol && bun run prettier:check:others",
    "prettier:write": "bun run prettier:write:sol && bun run prettier:write:others",
    "prettier:check:others": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write:others": "prettier --write \"**/*.{json,md,ymll}\" --ignore-path \".prettierignore\"",
    "prettier:check:sol": "prettier --check \"**/*.sol\" --ignore-path \".prettierignore\" --config .prettierrc.yml --plugin=prettier-plugin-solidity",
    "prettier:write:sol": "prettier --write \"**/*.sol\" --ignore-path \".prettierignore\" --config .prettierrc.yml --plugin=prettier-plugin-solidity",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && lcov --remove lcov.info  -o lcov.info 'test/*' 'script/*' && genhtml lcov.info --branch-coverage --output-dir coverage",
    "wagmi:hooks": "bunx wagmi generate"
  }
}
